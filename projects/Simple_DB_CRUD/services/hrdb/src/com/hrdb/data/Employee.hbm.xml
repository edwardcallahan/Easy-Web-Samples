<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.hrdb.data.Employee" table="EMPLOYEE" schema="PUBLIC" dynamic-insert="false" dynamic-update="false">
        <id name="eid" type="integer">
            <column name="EID"/>
            <generator class="identity"/>
        </id>
        <property name="firstname" type="string">
            <column name="FIRSTNAME"/>
        </property>
        <property name="lastname" type="string">
            <column name="LASTNAME"/>
        </property>
        <property name="street" type="string">
            <column name="STREET"/>
        </property>
        <property name="city" type="string">
            <column name="CITY"/>
        </property>
        <property name="state" type="string">
            <column name="STATE" length="2"/>
        </property>
        <property name="zip" type="string">
            <column name="ZIP"/>
        </property>
        <property name="birthdate" type="date">
            <column name="BIRTHDATE"/>
        </property>
        <property name="picurl" type="string">
            <column name="PICURL"/>
        </property>
        <property name="twitterid" type="string">
            <column name="TWITTERID" length="40"/>
        </property>
        <property name="tenantid" type="integer">
            <column name="TENANTID"/>
        </property>
        <many-to-one name="employee" class="com.hrdb.data.Employee">
            <column name="MANAGERID"/>
        </many-to-one>
        <many-to-one name="department" class="com.hrdb.data.Department">
            <column name="DEPTID"/>
        </many-to-one>
        <set name="employees" inverse="true" cascade="">
            <key>
                <column name="MANAGERID"/>
            </key>
            <one-to-many class="com.hrdb.data.Employee"/>
        </set>
        <set name="vacations" inverse="true" cascade="">
            <key>
                <column name="EMPID" not-null="true"/>
            </key>
            <one-to-many class="com.hrdb.data.Vacation"/>
        </set>
    </class>
</hibernate-mapping>